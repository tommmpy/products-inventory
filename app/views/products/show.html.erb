<div class="product">
  <h2 class="product-name"><%= @product.name %></h2>
  <div class="product-details">
    <p class="product-description"><%= @product.description %></p>
    <p class="product-price"><%= number_to_currency(@product.price) %></p>
  </div>
</div>

<div class="btn-container">
  <%= link_to "Edit", edit_product_path(@product), class: "btn-edit" %>
  <%= link_to "Delete", product_path(@product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn-delete" %>
  <%= link_to "Back", products_path, class: "btn-back" %>
</div>
